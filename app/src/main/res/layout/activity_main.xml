<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.monkey.customviewgroup.MainActivity">

    <com.monkey.customviewgroup.CustomViewGroup
        android:id="@+id/custom_viewgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textColor="#ff0000"
            android:text="textview1"
            android:textSize="15dp"
            android:gravity="center_horizontal"
            android:background="#0000f0"/>
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textColor="#ff0000"
            android:text="textview2"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:background="#00f0f0"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textColor="#ff0000"
            android:text="textview3"
            android:textSize="15dp"
            android:gravity="center_horizontal"
            android:background="#f0ff00"/>
        <TextView
            android:layout_width="1000dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textColor="#ff0000"
            android:text="textview4"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:background="#0ff0f0"/>
    </com.monkey.customviewgroup.CustomViewGroup>
</RelativeLayout>
